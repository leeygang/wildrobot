  <sensor>
    <!-- Chest IMU (BNO085) - 9-DOF sensor with realistic noise -->
    <!-- Datasheet specs: Gyro ~0.014°/s/√Hz, Accel ~150μg/√Hz, Mag ~0.3μT -->
    <gyro site="chest_imu" name="chest_imu_gyro" noise="0.0002" cutoff="100" />
    <accelerometer site="chest_imu" name="chest_imu_accel" noise="0.0015" cutoff="100" />
    <magnetometer site="chest_imu" name="chest_imu_mag" noise="0.3" />
    <framequat objtype="site" objname="chest_imu" name="chest_imu_quat" />

    <!-- Left Knee IMU (ICM45686) - 6-DOF sensor with realistic noise -->
    <!-- Datasheet specs: Gyro ~0.003°/s/√Hz, Accel ~80μg/√Hz -->
    <gyro site="left_knee_imu" name="left_knee_imu_gyro" noise="0.00005" cutoff="200" />
    <accelerometer site="left_knee_imu" name="left_knee_imu_accel" noise="0.0008" cutoff="200" />

    <!-- Right Knee IMU (ICM45686) - 6-DOF sensor with realistic noise -->
    <!-- Datasheet specs: Gyro ~0.003°/s/√Hz, Accel ~80μg/√Hz -->
    <gyro site="right_knee_imu" name="right_knee_imu_gyro" noise="0.00005" cutoff="200" />
    <accelerometer site="right_knee_imu" name="right_knee_imu_accel" noise="0.0008" cutoff="200" />

    <!-- Pelvis (trunk/waist) sensors -->
    <gyro site="pelvis_mimic" name="pelvis_gyro" />
    <accelerometer site="pelvis_mimic" name="pelvis_accel" />
    <velocimeter site="pelvis_mimic" name="pelvis_local_linvel" />
    <framequat objtype="site" objname="pelvis_mimic" name="pelvis_quat" />
    <framezaxis objtype="site" objname="pelvis_mimic" name="pelvis_upvector" />
    <framexaxis objtype="site" objname="pelvis_mimic" name="pelvis_forwardvector" />
    <framelinvel objtype="site" objname="pelvis_mimic" name="pelvis_global_linvel" />
    <frameangvel objtype="site" objname="pelvis_mimic" name="pelvis_global_angvel" />

    <!-- Right leg sensors -->
    <gyro site="right_hip_mimic" name="right_hip_gyro" />
    <accelerometer site="right_hip_mimic" name="right_hip_accel" />
    <framequat objtype="site" objname="right_hip_mimic" name="right_hip_quat" />
    <frameangvel objtype="site" objname="right_hip_mimic" name="right_hip_angvel" />

    <gyro site="right_knee_mimic" name="right_knee_gyro" />
    <accelerometer site="right_knee_mimic" name="right_knee_accel" />
    <framequat objtype="site" objname="right_knee_mimic" name="right_knee_quat" />
    <framelinvel objtype="site" objname="right_knee_mimic" name="right_knee_linvel" />

    <gyro site="right_foot_mimic" name="right_foot_gyro" />
    <accelerometer site="right_foot_mimic" name="right_foot_accel" />
    <framequat objtype="site" objname="right_foot_mimic" name="right_foot_quat" />
    <framelinvel objtype="site" objname="right_foot_mimic" name="right_foot_linvel" />
    <framezaxis objtype="site" objname="right_foot_mimic" name="right_foot_upvector" />

    <!-- Left leg sensors -->
    <gyro site="left_hip_mimic" name="left_hip_gyro" />
    <accelerometer site="left_hip_mimic" name="left_hip_accel" />
    <framequat objtype="site" objname="left_hip_mimic" name="left_hip_quat" />
    <frameangvel objtype="site" objname="left_hip_mimic" name="left_hip_angvel" />

    <gyro site="left_knee_mimic" name="left_knee_gyro" />
    <accelerometer site="left_knee_mimic" name="left_knee_accel" />
    <framequat objtype="site" objname="left_knee_mimic" name="left_knee_quat" />
    <framelinvel objtype="site" objname="left_knee_mimic" name="left_knee_linvel" />

    <gyro site="left_foot_mimic" name="left_foot_gyro" />
    <accelerometer site="left_foot_mimic" name="left_foot_accel" />
    <framequat objtype="site" objname="left_foot_mimic" name="left_foot_quat" />
    <framelinvel objtype="site" objname="left_foot_mimic" name="left_foot_linvel" />
    <framezaxis objtype="site" objname="left_foot_mimic" name="left_foot_upvector" />
  </sensor>